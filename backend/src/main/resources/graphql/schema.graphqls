type YieldPoint {
  term: String!
  rate: Float!
}

type Order {
  id: ID!
  term: String!
  amount: Float!
  createdAt: String!
  status: String!
  rateAtSubmission: Float
}

type Query {
  yieldCurve: [YieldPoint!]!
  orders: [Order!]!
}

input CreateOrderInput {
  term: String!
  amount: Float!
}

type Mutation {
  createOrder(input: CreateOrderInput!): Order!
}
